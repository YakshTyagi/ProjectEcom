@model FrontendEcom.Models.CustomerRegistration

@{ ViewData["Title"] = "RegisterCustomer"; }

<head>
    <link rel="stylesheet" href="~/css/RegisterCustomer.css"/>
</head>

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4>Customer Registration</h4>
            </div>
            <form asp-action="RegisterCustomer">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CustomerContact" class="control-label"></label>
                        <input asp-for="CustomerContact" class="form-control" />
                        <span asp-validation-for="CustomerContact" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}